# AutoWeave Memory Environment Configuration

# OpenAI Configuration (Required for embeddings)
OPENAI_API_KEY=your-openai-api-key-here

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_HTTPS=false

# Memgraph Graph Database
MEMGRAPH_HOST=localhost
MEMGRAPH_PORT=7687
MEMGRAPH_USER=
MEMGRAPH_PASSWORD=

# Redis ML Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# mem0 Bridge Service
MEM0_BRIDGE_HOST=localhost
MEM0_BRIDGE_PORT=8090
MEM0_SELF_HOSTED=true

# Service Configuration
NODE_ENV=development
LOG_LEVEL=INFO
PORT=3000

# Memory System Settings
MEMORY_COLLECTION_NAME=autoweave_memories
MEMORY_EMBEDDING_MODEL=text-embedding-ada-002
MEMORY_CHUNK_SIZE=1000
MEMORY_CHUNK_OVERLAP=200

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_ENTRIES=10000
CACHE_EVICTION_POLICY=LRU

# Hybrid Search Settings
HYBRID_CONTEXTUAL_WEIGHT=0.7
HYBRID_STRUCTURAL_WEIGHT=0.3
HYBRID_MIN_SCORE=0.5